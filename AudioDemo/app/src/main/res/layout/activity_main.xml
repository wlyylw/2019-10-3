<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">
        <ImageButton
            android:id="@+id/audio_start"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#fcfcfc"
            android:src="@drawable/ic_bluestart"
            android:layout_weight="1"/>
        <jaygoo.widget.wlv.WaveLineView
            android:id="@+id/waveLineView"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            app:wlvBackgroundColor="#fcfcfc"
            app:wlvLineColor="#000000"
            app:wlvMoveSpeed="290"
            android:visibility="invisible"/>

        <ImageButton
            android:id="@+id/audio_play_start"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#fcfcfc"
            android:src="@drawable/ic_yellowstart"
            android:visibility="invisible"
            />

</LinearLayout>